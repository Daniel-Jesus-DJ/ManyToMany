@model IEnumerable<Game>

@{
    ViewData["Title"] = "Game Shop";
}

<div class="text-center">
    <h1 class="display-4">Game Shop</h1>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }
</div>
<div class="row mb-3">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchString" class="form-control me-2"
                   value="@ViewData["CurrentFilter"]"
                   placeholder="Suchung bei Genre oder bei Name..." />
            <button type="submit" class="btn btn-outline-primary">Such</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Abrechnen</a>
        </form>
    </div>
</div>

<div class="row mt-4">
    @foreach (var game in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@game.SpielName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@game.Entwickler</h6>
                    <p class="card-text">
                        Genre:
                        @foreach (var g in game.Genres)
                        {
                            <span class="badge bg-secondary">@g.GenreName</span>
                        }
                    </p>
                    <p>ErscheingungsJahr: @game.ErscheingungsJahr</p>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <form asp-action="Buy" asp-controller="Home" method="post">
                        <input type="hidden" name="gameId" value="@game.GameID" />

                        @if (User.Identity.IsAuthenticated)
                        {
                            <button type="submit" class="btn btn-success w-100">Kaufen</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary w-100">Anmelden zu kaufen</button>
                        }
                    </form>
                </div>
            </div>
        </div>
    }
</div>