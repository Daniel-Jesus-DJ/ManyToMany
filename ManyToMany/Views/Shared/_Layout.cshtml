<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManyToMany</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManyToMany.styles.css" asp-append-version="true" />

    <!-- Kendo styles -->
    <link rel="stylesheet" href="~/lib/kendo/2021.1.330/kendo.common.min.css" />
    <link rel="stylesheet" href="~/lib/kendo/2021.1.330/kendo.default-v2.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ManyToMany</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <!-- Scripts: jQuery first, then Kendo, then app scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Optional: jszip for Kendo export features -->
    <script src="~/lib/kendo/2021.1.330/jszip.min.js"></script>

    <script src="~/lib/kendo/2021.1.330/kendo.all.min.js"></script>
    <script src="~/lib/kendo/2021.1.330/cultures/kendo.culture.de-DE.min.js"></script>
    <script src="~/lib/kendo/2021.1.330/messages/kendo.messages.de-DE.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
